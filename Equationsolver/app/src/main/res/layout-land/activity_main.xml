<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/solve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/solve"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginTop="240dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equationExample"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="30dp" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discriminant"
            android:text="@string/discriminant"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="380dp"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="105dp"/>
    <TextView
            android:text="@string/valueX1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valueX1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="380dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/discriminant"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/valueX2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valueX2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/valueX1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="380dp"
            android:textSize="18sp"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="43dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/factorA"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/labelA" android:layout_marginStart="30dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="42dp"
            android:ems="10"
            android:id="@+id/factorB"
            app:layout_constraintTop_toBottomOf="@+id/factorA"
            android:layout_marginTop="20dp" android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@+id/labelB" android:layout_marginStart="30dp"
    />
    <EditText
            android:layout_width="237dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/factorC"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/factorB"
            android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@+id/labelC" android:layout_marginStart="30dp"
    />
    <TextView
            android:text="@string/factorA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelA"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="43dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="86dp" android:textSize="18sp"/>
    <TextView
            android:text="@string/factorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/labelA" android:textSize="18sp"/>
    <TextView
            android:text="@string/factorC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelC"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/labelB" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>