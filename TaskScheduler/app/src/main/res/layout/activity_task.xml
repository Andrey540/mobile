<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.TaskActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text=""
            tools:ignore="Autofill"
            android:ems="10"
            android:id="@+id/taskNameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="30dp"
            android:hint="@string/task_name" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            tools:ignore="Autofill"
            android:ems="10"
            android:id="@+id/taskDescriptionText"
            android:hint="@string/task_description"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/taskNameText"/>
    <Button
            android:text="@string/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary" android:textColor="#FFFFFF"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/taskDescriptionText" android:textSize="18sp"/>
    <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            tools:ignore="Autofill"
            android:ems="10"
            android:hint="@string/chose"
            android:id="@+id/dateText"
            app:layout_constraintStart_toEndOf="@+id/dateLabel" android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/taskDescriptionText"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="24sp" android:inputType="date"/>
    <Button
            android:text=""
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/clearDateButton"
            android:background="@drawable/clear_button"
            android:radius="10dp"
            android:textColor="@color/white" android:drawableEnd="@drawable/ic_close"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/taskDescriptionText"
            app:layout_constraintStart_toEndOf="@+id/dateText" android:layout_marginStart="10dp"
            android:visibility="invisible"/>
    <TextView
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/dateLabel" android:textSize="18sp"/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            tools:ignore="Autofill"
            android:ems="10"
            android:hint="@string/chose"
            android:id="@+id/timeText"
            app:layout_constraintStart_toEndOf="@+id/timeLabel" android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/dateLabel"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="24sp" android:inputType="time"/>
    <CheckBox
            android:text="@string/turn_on_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enableNotificationCheckBox" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
            android:textSize="18sp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"/>
    <TextView
            android:text="@string/notify_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notificationOffsetLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationCheckBox" android:textSize="18sp"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="Autofill"
            android:ems="10"
            android:text=""
            android:maxLength="10"
            android:hint="@string/chose"
            android:id="@+id/notificationOffsetTimeText"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toEndOf="@+id/notificationOffsetLabel" android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/enableNotificationCheckBox"
            android:textSize="24sp" android:inputType="time"/>
    <CheckBox
            android:text="@string/set_as_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isCompletedCheckBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp"
            android:textSize="18sp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/notificationOffsetTimeText"/>
</android.support.constraint.ConstraintLayout>