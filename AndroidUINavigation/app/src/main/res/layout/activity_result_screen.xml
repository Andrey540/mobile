<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultScreenActivity" android:gravity="center" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Результат"
            android:ems="10"
            android:id="@+id/resultEditText" android:layout_margin="20dp"/>
    <Button
            android:text="Вернуть результат"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/returnResultButton"
            android:onClick="onReturnResultButtonClick"/>
</android.widget.LinearLayout>